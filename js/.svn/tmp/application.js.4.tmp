function switch_plode(e) {
    if (e.hasClass('explode')) {
	e.parent().find('ul').show();
	e.addClass('implode');
	e.removeClass('explode');
    } else {
	e.parent().find('ul').hide();
	e.addClass('explode');
	e.removeClass('implode');
    }
}
